{
  "id": null,
  "uid": "gateway-metrics",
  "title": "Gateway Metrics",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "5s",
  "panels": [
    {
      "type": "stat",
      "title": "HTTP Requests (1m rate)",
      "datasource": "Prometheus",
      "gridPos": { "h": 6, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(gateway_http_requests_total[1m]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "type": "stat",
      "title": "Client Events (1m rate)",
      "datasource": "Prometheus",
      "gridPos": { "h": 6, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(gateway_client_metrics_total[1m]))",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "type": "timeseries",
      "title": "Avg HTTP Latency (ms)",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 6 },
      "targets": [
        {
          "expr": "sum(rate(gateway_http_request_duration_ms_sum[1m])) / sum(rate(gateway_http_request_duration_ms_count[1m]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Avg Client Latency (ms)",
      "datasource": "Prometheus",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 14 },
      "targets": [
        {
          "expr": "sum(rate(gateway_client_latency_ms_sum[1m])) / sum(rate(gateway_client_latency_ms_count[1m]))",
          "refId": "A"
        }
      ]
    }
  ]
}
